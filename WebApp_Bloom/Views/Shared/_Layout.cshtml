<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp_Bloom</title>
    @*Fonte Open Sans no Projeto todo: *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@700&display=swap" rel="stylesheet">
    @*Folhas de estilo: *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp_Bloom.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light barrinha">
            <button class="hamburguer" onclick="openNav()"><img src="~/css/hamburguer.png" /></button>
            <div id="mySidebar" class="sidebar">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
                <a class="m" href="/Home/Index">INÍCIO</a>
                <div class="dropdown">
                    <button class="dropbtn">EVENTO</button>
                    <div style="position: relative;">
                        <div class="dropdown-content">
                            <a href="/Casamento/Cadastrar">CASAMENTO</a>
                            <a href="/Aniversario/Cadastrar">ANIVERSÁRIO</a>
                        </div>
                    </div>
                    
                </div>
                <div class="f"><button class="sair">SAIR</button></div>
            </div>
            <div class="navbar-header">
                <img style="height: 60px;" src="~/css/Bloom (1).png" />
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>

</body>
</html>
