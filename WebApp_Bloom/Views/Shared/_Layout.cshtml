<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp_Bloom</title>
    @*Fonte Open Sans no Projeto todo: *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@700&display=swap" rel="stylesheet">
    @*Folhas de estilo: *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp_Bloom.styles.css" asp-append-version="true" />
    @*JQuery*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
    @*Para o carousel*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-light barrinha">
            <div class="col align-items-center">
                <button class="hamburguer" onclick="openNav()"><img src="~/css/hamburguer.png" /></button>
            </div>
            <div id="mySidebar" class="sidebar">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
                <a class="m" href="/Evento/Evento">INÍCIO</a>
                <div class="dropdown">
                    <button class="dropbtn">EVENTO</button>
                    <div style="position: relative;">
                        <div class="dropdown-content">
                            <a href="/Casamento/Cadastrar">CASAMENTO</a>
                            <a href="/Aniversario/Cadastrar">ANIVERSÁRIO</a>
                        </div>
                    </div>

                </div>
                <div class="f"><button class="sair">SAIR</button></div>
            </div>
            <div class="col">
                <div class="row justify-content-center align-self-center">
                    <img style="width: 160px;" src="~/css/Bloom (1).png" />
                </div>
            </div>
            <div class="col"></div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>

</body>
</html>
